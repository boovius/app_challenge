  //= depend_on_asset 'cell_templates/checkbox.html'
  $scope.app = app.app
  $scope.currentUser = gon.currentUser

  $scope.dataTableConfig = {
    itemsByPage: 50,
    isPaginationEnabled: false
  }

  $scope.showAppTableColumns = [
        {label: 'Feature', map: 'title'},
        {label: 'Points', map:'points'},
        {label: 'Completed', map:'done', cellTemplateUrl: '<%= asset_path('cell_templates/checkbox.html') %>'}
  ]

  $scope.showAppTableRowData = $scope.app.features

}])
